root = true

[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

[*.json]
indent_size = 4

[*.{html,md,rst,xml,yml,yaml}]
indent_size = 2

[*.py]
charset = utf-8
indent_size = 4

[*.rst]
indent_size = 2

[Makefile]
indent_size = 4
indent_style = tab

[{package,package-lock}.json]
indent_size = 2

[*.{html,js,jsx,rst,toml,ts,xml,yml,yaml}]
indent_size = 2
